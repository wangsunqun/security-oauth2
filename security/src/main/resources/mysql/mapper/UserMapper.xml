<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wsq.security.oauth2.security.dao.UserMapper">

    <select id="getUserByName" resultType="com.wsq.security.oauth2.security.entity.User">
        SELECT * FROM user
        where username = #{username}
    </select>
</mapper>